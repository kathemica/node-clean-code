{
  "name": "node-clean-code",
  "version": "1.0.0",
  "description": "Uso de Clean Code, SOLID, TDD y Typescript",
  "main": "index.ts",
  "scripts": {
    "start": "tsnd --transpile-only --respawn --ignore-watch node_modules ./src/main/server/server.ts",
    "test": "jest --passWithNoTests --silent --noStackTrace",
    "test:all": "jest",
    "test:watch": "jest -i --watch",
    "test:unit": "npm test -- --watch -c ./jest-unit-config.ts",
    "test:integration": "npm test -- --watch -c ./jest-integration-config.ts",
    "test:coverage": "npm test -- --coverage",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kathemica/node-clean-code.git"
  },
  "keywords": [
    "node",
    "tdd",
    "solid",
    "clean",
    "code"
  ],
  "author": "Ing. Katherine E Aguirre",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/kathemica/node-clean-code/issues"
  },
  "homepage": "https://github.com/kathemica/node-clean-code#readme",
  "devDependencies": {
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.170",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^15.6.2",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.27.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^5.0.0",
    "git-commit-msg-linter": "^3.1.0",
    "husky": "^6.0.0",
    "jest": "^27.0.3",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.2",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "express": "^4.17.1",
    "fast-glob": "^3.2.5",
    "lodash": "^4.17.21",
    "mongoose": "^5.12.13",
    "validator": "^13.6.0"
  }
}
